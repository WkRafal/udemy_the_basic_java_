<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Configuration DTD 6.1//EN"
        "http://hibernate.sourceforge.net/hibernate-configuration-6.1.dtd">
<hibernate-mapping>
    <class name= "org.example.Employee" table="employees">
            <id name="id">
                <generator class="increment"></generator>
            </id>
        <property name="name"></property>
        <property name="surname"></property>
        <property name="jobTitle"></property>
        <property name="address"></property>
        <property name="age"></property>
        <property name="salary"></property>
    </class>
</hibernate-mapping>